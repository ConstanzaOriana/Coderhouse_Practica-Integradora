<h1>Carts collection</h1>

<p id="paragraphRender">{{data}}</p>

<h2>Add Cart element ➕</h2>

<div>
    <label>Cart</label>
    <input id="inputCart" type="text">
    <p>Example: {"product":"63f6269a51a56ec092ddc455","quantity":"1"}</p>
</div>
<br>

<button id="btnAddCart">Add Cart</button>

<h2>Update Cart element by ID ✨</h2>

<div>
    <label>ID Cart</label>
    <input id="inputCartID" type="text">
    <p>Example: 63f63c19325ea62e5da65406</p>
    <br>
    <label>New Cart</label>
    <input id="inputNewCart" type="text">
    <p>Example: {"product":"63f6269a51a56ec092ddc455","quantity":"5"}</p>
</div>
<br>

<button id="btnUpdateCart">Update Cart element</button>

<h2>Delete Cart element ❌</h2>

<div>
    <label>Cart ID to remove</label>
    <input id="inputDeleteCartID" type="text">
    <p>Example: 63f63c19325ea62e5da65406</p>
</div>
<br>

<button id="btnDeleteCart">Remove Cart</button>

<script src="js/carts.js"></script>